{
  "version": 2,
  "installCommand": "cd kodlar-app && npm install",
  "buildCommand": "cd kodlar-app && npm run build",
  "outputDirectory": "kodlar-app/build",
  "functions": {
    "api/ask.js": {
      "maxDuration": 30
    },
    "api/health.js": {
      "maxDuration": 10
    },
    "api/index.js": {
      "maxDuration": 5
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
